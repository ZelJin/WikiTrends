source "https://rubygems.org"

#Ruby framework
gem 'sinatra'
gem 'sinatra-contrib'

#Template engine
gem 'haml'

#Postgres
gem 'pg'

#MongoDB Driver
gem 'mongo', git: 'git://github.com/mongodb/mongo-ruby-driver.git', branch: '1.x-stable'
gem 'bson_ext'

#Rest client for gathering web-pages
gem 'rest-client'
gem 'json'

#Nokogiri for web-pages parsing
gem 'nokogiri'
